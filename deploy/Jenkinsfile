pipeline {
  agent any

  environment {
    ANSIBLE_CONFIG="${WORKSPACE}/deploy/ansible.cfg"
  }

  // parameters {
  //     string(name: 'inventory', defaultValue: 'dev',  description: 'This is the inventory file for the environment to deploy configuration')
  //   }
    
  stages{

    stage('initial workspace cleanup') {
      steps {
        dir("${WORKSPACE}") {
        deleteDir()
        }
      }
    }

    stage('SCM checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Y2O-Dev/Ansible_Config.git'
      }
    }

    stage ('Update roles_path using sed') {
      steps {
        sh 'echo ${WORKSPACE}' 
        sh 'sed -i "3 a roles_path=${WORKSPACE}/roles" ${WORKSPACE}/deploy/ansible.cfg' 
      }
    }

    stage ('Ansible execution in Jenkins') {
      steps {
        ansiblePlaybook become: true, colorized: true, credentialsId: 'private_key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory/ci', playbook: 'playbooks/site.yml'
      }
    }

    stage ('clean workspace after build') {
      steps {
        cleanWs(cleanWhenAborted: true, cleanWhenFailure: true, cleanWhenNotBuilt: true, cleanWhenUnstable: true, deleteDirs: true)
      }
    }
  }
}